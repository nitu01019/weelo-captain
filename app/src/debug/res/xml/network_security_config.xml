<?xml version="1.0" encoding="utf-8"?>
<!--
    DEBUG Network Security Config — Weelo Captain App
    ==================================================
    HTTP allowed for AWS ALB (no HTTPS listener yet).
    When HTTPS is added to ALB, remove the ALB domain-config below.
    This file is ONLY used in debug builds.
-->
<network-security-config>

    <!-- Default: HTTPS only -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Local development IPs — cleartext allowed -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">10.0.2.2</domain>
        <domain includeSubdomains="false">localhost</domain>
        <domain includeSubdomains="false">127.0.0.1</domain>
        <domain includeSubdomains="false">192.168.1.10</domain>
        <domain includeSubdomains="false">192.168.1.100</domain>
        <domain includeSubdomains="false">192.168.0.100</domain>
    </domain-config>

    <!-- AWS ALB — HTTP only until HTTPS listener + ACM cert is added -->
    <!-- TODO: Remove this block once ALB has HTTPS configured -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">weelo-alb-380596483.ap-south-1.elb.amazonaws.com</domain>
        <domain includeSubdomains="true">amazonaws.com</domain>
    </domain-config>

    <!-- Trust user CAs in debug for Charles/Proxyman proxy debugging -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>

</network-security-config>
