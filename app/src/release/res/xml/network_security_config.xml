<?xml version="1.0" encoding="utf-8"?>
<!--
    RELEASE Network Security Config — Weelo Captain App
    ====================================================
    Current infra uses HTTP on the AWS ALB (no HTTPS listener/domain yet).
    Release builds allow cleartext ONLY for the exact ALB host.
    All other domains remain HTTPS-only.
-->
<network-security-config>

    <!-- Default: HTTPS only -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Production domains — HTTPS enforced -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">weelo.in</domain>
        <domain includeSubdomains="true">api.weelo.in</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
        <!--
            Certificate Pinning — enable when SSL cert is live on ALB:
            <pin-set expiration="2027-12-31">
                <pin digest="SHA-256">YOUR_LEAF_CERTIFICATE_PIN_HERE=</pin>
                <pin digest="SHA-256">YOUR_INTERMEDIATE_CA_PIN_HERE=</pin>
            </pin-set>
        -->
    </domain-config>

    <!-- AWS ALB — HTTP only until HTTPS listener/domain is configured -->
    <!-- Keep this scope narrow: exact ALB hostname only -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">weelo-alb-380596483.ap-south-1.elb.amazonaws.com</domain>
    </domain-config>

</network-security-config>
